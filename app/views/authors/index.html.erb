<% content_for :title, "Authors" %>

<%= render 'shared/header' %>

<main class="container mx-auto mt-32 px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold text-gray-900">Autores</h2>
    <%= link_to 'Novo Autor', new_author_path, class: 'px-4 py-2 bg-purple-600 text-white font-medium rounded-lg hover:bg-purple-700 transition duration-150 ease-in-out' %>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <% @authors.each do |author| %>
      <%= link_to author_path(author), class: "block" do %>
        <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition duration-300 ease-in-out p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= author.name %></h3>
          <p class="text-gray-600"><%= pluralize(author.books.count, 'livro', 'livros') %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</main>
